#!/usr/bin/env python

import os
import logging

import dripline

log_level = os.getenv("LOG_LEVEL", "DEBUG")
logging.basicConfig(level=log_level, format='%(asctime)s - %(name)s - %(levelname)s - %(message)s')

server = dripline.implementations.HTTPServer(
    http_host='0.0.0.0', 
    http_port=8080, 
    web_root='/html',
    dripline_config={'auth-file':'/auths.json'},
)
server.http_listen()
